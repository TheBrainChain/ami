{
  "name": "ami.js",
  "version": "0.32.0",
  "main": "build/ami.js",
  "author": {
    "name": "Nicolas Rannou",
    "email": "nicolas@eunate.ch",
    "url": "https://eunate.ch"
  },
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://fnndsc.github.io/ami"
  },
  "config": {
    "gaKey": "UA-39303022-3",
    "babel": "--module-bind js=babel-loader --colors --display-error-details"
  },
  "lint-staged": {
    "{{src/**,examples/**, lessons/**}/,}.{js,jsx,json,css,ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "es5",
    "overrides": [
      {
        "files": "*.css",
        "options": {
          "useTabs": false,
          "tabWidth": 2
        }
      }
    ]
  },
  "sideEffects": false,
  "dependencies": {
    "OpenJPEG.js": "github:joedrago/openjpeg#master",
    "dicom-parser": "1.8.1",
    "image-JPEG2000": "ReflexionMed/image-JPEG2000#master",
    "jpeg-lossless-decoder-js": "latest",
    "math-float32-to-binary-string": "latest",
    "nifti-reader-js": "latest",
    "nrrd-js": "latest",
    "pako": "latest",
    "three": "^0.126.1",
    "yarn": "latest"
  },
  "scripts": {
    "build:ami": "webpack --config webpack.config.build.js",
    "build:ami:prod": "cross-env NODE_ENV=production yarn build:ami",
    "build:clean": "rimraf -rf build/*",
    "dev:ami": "webpack --config webpack.config.build.js --hot  --colors",
    "dist:ami": "yarn build:clean && yarn build:ami && yarn build:ami:prod",
    "dist:examples": "node ./scripts/buildDist.js && node ./scripts/router.js examples deploy",
    "dist:clean": "rimraf -rf dist/*",
    "clean": "yarn build:clean && yarn dist:clean",
    "ami": "yarn dist:ami && yarn test"
  },
  "devDependencies": {
    "@babel/core": "^7.13.8",
    "@babel/preset-env": "^7.13.9",
    "@types/node": "^14.14.31",
    "@types/three": "^0.126.0",
    "babel-loader": "^8.2.2",
    "compression-webpack-plugin": "latest",
    "cross-env": "latest",
    "node-pre-gyp": "latest",
    "prettier": "latest",
    "prettier-check": "latest",
    "puppeteer": "latest",
    "rimraf": "latest",
    "ts-loader": "latest",
    "tslint": "latest",
    "tslint-config-prettier": "latest",
    "tslint-loader": "latest",
    "typescript": "latest",
    "uglifyjs-webpack-plugin": "^1.2.7",
    "webpack": "^5.24.3",
    "webpack-bundle-analyzer": "latest",
    "webpack-cli": "latest"
  }
}
